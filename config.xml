<?xml version='1.0' encoding='utf-8'?>
<widget id="com.riverteesredisocovered.rtr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RTR</name>
    <description>
        The official mobile application for River Tees Rediscovered.
    </description>
    <author email="rtr.database@gmail.com" href="https://www.riverteesrediscovered.org">
        River Tees Rediscovered
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="UIWebViewBounce" value="true" />
    <preference name="DisallowOverscroll" value="false" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <platform name="android">
        <allow-navigation href="*" />
        <allow-intent href="*" />
        <access origin="*" />
        <allow-intent href="market:*" />
        <resource-file src="res/google-services.json" target="app/google-services.json" />
        <icon density="ldpi" src="res/android/Icon-36.png" />
        <icon density="mdpi" src="res/android/Icon-48.png" />
        <icon density="hdpi" src="res/android/Icon-72.png" />
        <icon density="xhdpi" src="res/android/Icon-96.png" />
        <icon density="xxhdpi" src="res/android/Icon-144.png" />
        <icon density="xxxhdpi" src="res/android/Icon-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <resource-file src="res/GoogleService-Info.plist" />
        <icon height="180" src="res/ios/Icon-180.png" width="180" />
        <icon height="60" src="res/ios/Icon-60.png" width="60" />
        <icon height="120" src="res/ios/Icon-120.png" width="120" />
        <icon height="76" src="res/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/ios/Icon-152.png" width="152" />
        <icon height="40" src="res/ios/Icon-40.png" width="40" />
        <icon height="80" src="res/ios/Icon-80.png" width="80" />
        <icon height="57" src="res/ios/Icon-57.png" width="57" />
        <icon height="114" src="res/ios/Icon-114.png" width="114" />
        <icon height="72" src="res/ios/Icon-72.png" width="72" />
        <icon height="144" src="res/ios/Icon-144.png" width="144" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
        <icon height="29" src="res/ios/Icon-29.png" width="29" />
        <icon height="58" src="res/ios/Icon-58.png" width="58" />
        <icon height="50" src="res/ios/Icon-50.png" width="50" />
        <icon height="100" src="res/ios/Icon-100.png" width="100" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.2.2">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyCYGusGkn_i0_wZDCnmg8KmIjJ70p85TD4" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyC2ef0SnZDNm9dAYYDZ5014rmBqydtQEFQ" />
        <variable name="PLAY_SERVICES_VERSION" value="11.0.1" />
        <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="Allow to see your location on the map." />
        <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="Allow to see your location on the map." />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Allow to see your location on the map." />
    </plugin>
    <plugin name="cordova-plugin-firebase" spec="^0.1.25" />
    <plugin name="cordova-plugin-camera" spec="^4.0.2">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Allow to share images in the app." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Allow to share images in the app." />
    </plugin>
    <plugin name="cordova-plugin-wkwebview-engine" spec="^1.1.4" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^6.4.0" />
</widget>
